@model AjudaHumana.Core.ViewModels.AlertViewModel

@if (Model != null)
{

    @if (Model.Type == "alert")
    {
        <script type="text/javascript">
            $(function() {
                Swal.fire({
                    title: '@Model.Title',
                    html: '@Model.Message',
                    icon: '@Model.Icon',
                    confirmButtonText: 'Fechar'
                });
            });
        </script>
    }
    else if (Model.Type == "toast")
    {
        <script type="text/javascript">
            toastr.success('@Model.Message')
        </script>
    }

}

